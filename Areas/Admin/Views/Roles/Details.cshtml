@model DHungBooks.Models.Role

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h4>Thông tin</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Vai trò
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-warning btn-tone m-r-5">Sửa</a>
    <a asp-action="Index" class="btn btn-primary btn-tone m-r-5">Quay lại</a>
</div>
