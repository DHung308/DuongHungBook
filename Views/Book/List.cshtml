@using PagedList.Core.Mvc;
@model PagedList.Core.IPagedList<DHungBooks.Models.Book>
@{
	Category category = ViewBag.CurrentCa;
	ViewData["Title"] = category.Title +" "+ ViewBag.CurrentPage;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="colored">
					<h1 class="page-title">@category.CaName</h1>
					<div class="breadcum-items">
						<span class="item"><a href="index.html">Home /</a></span>
						<span class="item colored">@category.CaName</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div><!--site-banner-->

<section class="padding-large">
	<div class="container">
		<div class="row">

			<div class="products-grid grid">
				@if (Model != null && Model.Count > 0)
				{
					foreach (var item in Model)
					{
						string url = $"/{item.Alias}--{item.BookId}.html";
						<figure class="product-style">
							<a href="@url">
								<img src="~/images/Book/@item.Thumb" alt="@item.Title" class="product-item">
							</a>
							<button type="button" class="add-to-cart" data-product-tile="add-to-cart">Xem</button>
						</figure>
					}
				}
			</div>

		</div>
	</div>
</section>