@model DHungBooks.ModelViews.ChangePasswordViewModel

<div class="card-body pb-2">
    <form asp-controller="Account" asp-action="ChangePassword" method="post" class="myaccount-form">
		<div class="form-group">
			<label class="form-label">Mật khẩu hiện tại</label>
			<input asp-for="PasswordNow" type="password" class="form-control">
		</div>
		<div class="form-group">
			<label class="form-label">Mật khẩu mới</label>
			<input asp-for="Password" type="password" class="form-control">
		</div>
		<div class="form-group">
			<label class="form-label">Nhập lại mật khẩu</label>
			<input asp-for="ConfirmPassword" type="password" class="form-control">
		</div>
		<div class="single-input">
			<button class="btn btn-primary" style="background-color: #DBA85B; border-color: #DBA85B;" type="submit">Lưu mật khẩu</button>;
		</div>
    </form>
</div>

